@page
@model RazorPagesWebApplication.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

@if (Model.Order is null)
{
    <h4>The requested order could not be found</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete the order placed at @Model.Order.OrderDate by @Model.Order.OrderName ?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <div class="form-group">
            <input class="btn btn-danger" type="submit" value="Delete Order" />
        </div>
    </form>

}
